#!/bin/sh

# $TSUKUBA_Release: Omni OpenMP Compiler 3 $
# $TSUKUBA_Copyright:
#  PLEASE DESCRIBE LICENSE AGREEMENT HERE
#  $
OUTFILE=$1
INPFILE=$2

if [ -z "${OUTFILE}" ]; then
    echo output file not specified
    exit 1
fi

if [ -z "${INPFILE}" ]; then
    echo input file not specified
    exit 1
fi

if [ ! -z "${OM_TRANSLATORS}" ]; then
    OM_OPTIONS="${OM_OPTIONS} -I${OMNI_HOME}/include"
    for TID in ${OM_TRANSLATORS}; do
        CONF="${OMNI_HOME}/etc/native.conf.${TID}"
        if [ -r ${CONF} ]; then
            . ${CONF}
        else
            echo cannot read ${CONF} script.
            exit 1
        fi
    done;
fi

GPU_CMD="@GPU_CMD@"
INPFILE_BASENAME=`basename ${INPFILE}`
INPFILE_FILENAME=${INPFILE_BASENAME%.*}
newOpts=''
for i in ${OM_OPTIONS}; do
    case ${i} in
        -enable-gpu)
            if [ -f "${INPFILE_FILENAME}.cu" ]; then
                ${GPU_CMD} -arch=sm_20 -I${OMNI_HOME}/include -c ${INPFILE_FILENAME}.cu -o ${INPFILE_FILENAME}.xmpgpu.o
            fi;;
        -tmp)
            cp ${INPFILE} __omni_tmp_${INPFILE_BASENAME};;
        *)
            newOpts="${newOpts} ${i}";;
    esac
done
OM_OPTIONS="${newOpts}"

FJRDMA="@FJRDMA_TRUE@"
if test "${FJRDMA}" == ""; then
  OM_OPTIONS="${OM_OPTIONS} -D_XMP_COARRAY_FJRDMA"
fi

CMD="${COMPILER} ${OM_OPTIONS} -c ${INPFILE} -o ${OUTFILE}"

GASNET="@GASNET_PREFIX@"
CONDUIT="@GASNET_CONDUIT@"
if test "${GASNET}" != "" -a "${CONDUIT}" != "" ; then
  CMD="${CMD} -Wno-attributes"
# When using "include <xmp_lock.h>", the "gasnet.h" is called from xmp_lock.h.
# The __attribute__((unused)) which is used in gasnet.h and is expanded by C_Front,
# and "Warning attribute" is occur when compiling it.
# So, not to occur this warning, compile option "-Wno-attributes" is attached.
fi

if [ "${OM_VERBOSE}" = "1" ]; then
    echo $CMD
fi

$CMD

exit $?

